<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminDashboardActivity">


    <!-- Main Dashboard Content -->
    <LinearLayout
        android:id="@+id/main_dashboard_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Section with Modern Design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="32dp"
                    android:paddingBottom="24dp"
                    android:paddingHorizontal="24dp">

                    <!-- Profile Avatar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo_bg"
                            android:scaleType="centerCrop"
                            android:contentDescription="Admin Avatar" />

                    </androidx.cardview.widget.CardView>

                    <!-- Welcome Text -->
                    <TextView
                        android:id="@+id/tv_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back, Admin! ðŸ‘‹"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola channel TV dan pelanggan dengan mudah"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Current Date/Time -->
                    <TextView
                        android:id="@+id/tv_current_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rabu, 23 Juli 2025"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

                <!-- Statistics Cards with Modern Design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginBottom="32dp">

                    <!-- First Row Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_money"
                                    app:tint="#4CAF50"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Pendapatan"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tv_total_revenue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 12.500.000"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#4CAF50"
                                    android:fontFamily="sans-serif-condensed" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_people"
                                    app:tint="#2196F3"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Users"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tv_total_users"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1,247"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#2196F3"
                                    android:fontFamily="sans-serif-condensed" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Second Row Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_assignment"
                                    app:tint="#FF9800"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Orders"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tv_total_orders"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="856"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#FF9800"
                                    android:fontFamily="sans-serif-condensed" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_tv"
                                    app:tint="#9C27B0"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Active Channels"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tv_active_channels"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="127"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#9C27B0"
                                    android:fontFamily="sans-serif-condensed" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Management Section with Beautiful Cards -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Management Center"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <!-- Channel Management Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_manage_channels"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:background="@drawable/gradient_purple_blue">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_tv"
                                app:tint="@android:color/white"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Kelola Channel TV"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="sans-serif-medium" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@android:color/white" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Customer Management Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_manage_customers"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:background="@drawable/gradient_blue_teal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_people"
                                app:tint="@android:color/white"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Kelola Pelanggan"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="sans-serif-medium" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@android:color/white" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Orders Management Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_reports"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:background="@drawable/gradient_orange_red">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_assignment"
                                app:tint="@android:color/white"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Kelola Orders"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="sans-serif-medium" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@android:color/white" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Chat Management Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_chat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:background="@drawable/gradient_green_lime">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_chat"
                                app:tint="@android:color/white"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Chat Management"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="sans-serif-medium" />

                            <!-- Chat notification badge -->
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="3"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/notification_badge"
                                android:layout_marginEnd="8dp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@android:color/white" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Logout Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_logout"
                                app:tint="#F44336"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#F44336"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>